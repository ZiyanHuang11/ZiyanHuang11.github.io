---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          {% if page.cv_pdf contains '://' %}
            href="{{ page.cv_pdf }}"
          {% else %}
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
          {% endif %}
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
          title="Open PDF in new tab"
        >
          <i class="fa-solid fa-external-link"></i>
        </a>
        <a
          {% if page.cv_pdf contains '://' %}
            href="{{ page.cv_pdf }}"
          {% else %}
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
          {% endif %}
          download
          class="float-right mr-3"
          title="Download PDF"
        >
          <i class="fa-solid fa-download"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div class="cv-viewer">
      {% if page.cv_pdf %}
        <div class="pdf-container">
          <iframe 
            {% if page.cv_pdf contains '://' %}
              src="{{ page.cv_pdf }}"
            {% else %}
              src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            {% endif %}
            width="100%" 
            height="800px" 
            type="application/pdf"
            style="border: none;"
          >
            <p>Your browser does not support PDFs. 
              <a 
                {% if page.cv_pdf contains '://' %}
                  href="{{ page.cv_pdf }}"
                {% else %}
                  href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
                {% endif %}
                target="_blank"
              >
                Download the PDF
              </a>
            </p>
          </iframe>
        </div>
      {% else %}
        <p>No CV PDF specified.</p>
      {% endif %}
    </div>
  </article>
</div>